#pragma once

/* 
 * Custom key binding support similar to what tinyrl provides.
 * Includes support for line completion similar to what tinyrl provides.
 */
#cmakedefine01 WITH_KEY_BINDING

/* 
 * Use ASCII escape sequences to try and determine the terminal width if the
 * ioctl() call fails.
 */
#cmakedefine01 QUERY_TERMINAL_FOR_WIDTH

/*
 * Include the 'native' completion code that comes with linenoise. It calls the
 * completion callback (if registered) when the TAB key is entered.
 */
#cmakedefine01 WITH_NATIVE_COMPLETION

